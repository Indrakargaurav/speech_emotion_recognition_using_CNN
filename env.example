# Flask ML API Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000

# Node.js Server Configuration
NODE_ENV=development
NODE_PORT=4000
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/userAuth
MONGODB_DB_NAME=userAuth

# Frontend Configuration (Development)
REACT_APP_API_URL=http://localhost:5000
REACT_APP_SERVER_URL=http://localhost:4000

# Frontend Configuration (Production - Update with your actual URLs)
# REACT_APP_API_URL=https://your-flask-api.onrender.com
# REACT_APP_SERVER_URL=https://your-node-backend.onrender.com

# CORS Configuration (Development)
CORS_ORIGIN=http://localhost:3000

# CORS Configuration (Production - Update with your Vercel domain)
# CORS_ORIGIN=https://your-app.vercel.app

# Model Configuration
MODEL_PATH=./cnn_telugu.pth
UPLOAD_FOLDER=uploads

# Security Configuration
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax 